extends layout.pug
    
block content
    h1 Recommendations

    table 
      each t in tracks
        tr 
          - var artist_name = t.artists[0].name
          - var track_name = t.name
          - var track_preview = t.preview_url
          - var track_uri = t.uri

          td #{artist_name}
          td #{track_name}
          td: a(href=track_preview) Preview
          td: a(href='/addtoqueue?uri=' + track_uri) Add to Queue
    a(href='/dashboard') Return